{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "lib": [
      "ES2020",
      "ES2020.string",
      "ES2017.object"
    ],
    "target": "ES2020"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "./test/**/*"
  ]
}

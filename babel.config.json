{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current" // this version to support `async/await`
        }
      }
    ]
  ],
  "plugins": [
    [
      "@babel/plugin-proposal-class-properties",
      {
        "loose": true
      }
    ],
    "@babel/plugin-proposal-class-static-block"
  ],
  "retainLines": true
}
